{
    "name": "taoti/taoti_bootstrap",
    "description": "A Barebones Bootstrap theme for Drupal 8",
    "license": "MIT",
    "authors": [
        {
            "name": "Rich Allen",
            "email": "rallen@taoti.com"
        }
    ],
    "minimum-stability": "dev",
    "type": "package",
    "require": {
        "twbs/bootstrap": "~3.3@dev"
    },
    "scripts": {
        "post-update-cmd": "rsync -r vendor/twbs/bootstrap/ . --exclude=composer.json --exclude=docs/ --exclude=.git/ && echo vendor/ >> .gitignore",
        "post-install-cmd": "rsync -r vendor/twbs/bootstrap/ . --exclude=composer.json --exclude=docs/ --exclude=.git/ && echo vendor/ >> .gitignore"
    }
}
